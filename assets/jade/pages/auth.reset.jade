extends ../base.jade

block vars
	- var bodyid = 'auth-signup'

block content
	div.auth-title Reset your password
	form
		section
			div
				input(type="password", name="password", placeholder="password", required)#auth-password1
				input(type="password", name="repassword", placeholder="re-enter password", required)#auth-password2
			div
				input(type="submit", value="Reset your password").submit
	ul#error